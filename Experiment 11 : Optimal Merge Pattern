#include <stdio.h>
#include <stdlib.h>

// Function to Sort the files in ascending order, perform optimal file merging and return the minimum cost
int optimalMerge(int files[], int n) {
int cost = 0;
for (int i = 0; i < n - 1; i++) {
	for (int j = 0; j < n - i - 1; j++) {
		if (files[j] > files[j + 1]) {
			int temp = files[j];
			files[j] = files[j + 1];
			files[j + 1] = temp;
		}
	}
}
while (n > 1) {
	int merged = files[0] + files[1];
	cost += merged;
	files[0] = merged;
	for (int i = 1; i < n - 1; i++) {
		files[i] = files[i + 1];
	}
	n--;
	for (int i = 0; i < n - 1; i++) {
		for (int j = 0; j < n - i - 1; j++) {
			if (files[j] > files[j + 1]) {
				int temp = files[j];
				files[j] = files[j + 1];
				files[j + 1] = temp;
			}
		}
	}
}
return cost;
}

